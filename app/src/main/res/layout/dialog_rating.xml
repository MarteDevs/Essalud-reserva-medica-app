<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/futuristic_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título del Diálogo -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Calificar Consulta"
        android:textColor="@color/futuristic_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Información de la cita en una tarjeta -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/futuristic_background"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/futuristic_text"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Dr. Juan Pérez" />

            <TextView
                android:id="@+id/tvSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/futuristic_primary"
                android:textSize="14sp"
                tools:text="Cardiología" />

            <TextView
                android:id="@+id/tvAppointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/futuristic_hint"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/futuristic_hint"
                tools:text="15 Dic 2024 - 10:00 AM" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Calificación con estrellas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="¿Cómo calificarías la consulta?"
        android:textColor="@color/futuristic_text"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:progressTint="@color/futuristic_secondary"
        android:secondaryProgressTint="@color/futuristic_hint"
        android:stepSize="0.5"
        tools:rating="4.5" />

    <TextView
        android:id="@+id/tvRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:textColor="@color/futuristic_secondary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Muy Buena (4.5 estrellas)" />

    <!-- Campo de comentario estilizado -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilComment"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comentario (opcional)"
        app:boxStrokeColor="@color/futuristic_primary"
        app:hintTextColor="@color/futuristic_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="4"
            android:maxLines="6"
            android:textColor="@color/futuristic_text"
            tools:text="La atención fue excelente, el doctor fue muy atento y resolvió todas mis dudas." />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="@color/futuristic_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:strokeColor="@color/futuristic_primary"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/futuristic_primary"
            android:text="Enviar Calificación"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>
